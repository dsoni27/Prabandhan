<Window x:Class="Parbandhan.View.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:local="clr-namespace:Parbandhan.View"
        mc:Ignorable="d"
        Title="MainView" Height="700" Width="1300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        WindowState="Maximized"
        Background="Transparent"
        AllowsTransparency="True">

    <Border CornerRadius="10" 
        BorderThickness="1">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource windowBorderColor1}" Offset="0.0"/>
                <GradientStop Color="{StaticResource windowBorderColor2}" Offset="0.75"/>
                <GradientStop Color="{StaticResource windowBorderColor3}" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>
            <Grid.ColumnDefinitions>
                <!--Navigation Menu Section-->
                <ColumnDefinition Width="250"/>
                <!--Content Section-->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Navigation Menu Section-->
            <Border CornerRadius="0,0,0,0"
                    Grid.Column="0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                        <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel>
                    <!--Logo & Header-->
                    <StackPanel Orientation="Horizontal"
                                Height="35"
                                Margin="15,25,0,40">
                        <Image Source="/Images/document-management_1.png" Height="30"/>
                        <TextBlock  Text="PARBANDHAN" 
                                    FontSize="25" 
                                    FontWeight="Medium" 
                                    FontFamily="Trebuchet MS" 
                                    Foreground="{StaticResource titleColor2}" 
                                    VerticalAlignment="Center"
                                    Margin="10,0,0,0"/>
                    </StackPanel>

                    <!--Menu Buttons-->
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color12}"                                 
                                 Command="{Binding ShowHomeViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Home" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Dashboard" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color12}"                                 
                                 Command="{Binding ShowHomeViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Video" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Add Asset" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color12}"                                 
                                 Command="{Binding ShowHomeViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="BoxesStacked" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Manage Assets" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color12}"                                 
                                 Command="{Binding ShowHomeViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Bucket" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Manage Bucket" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>
            </Border>

            <!--Content Section-->
            <Border CornerRadius="0,0,0,0"
                    Grid.Column="1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                        <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource primaryBackColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <!--Control Bar-->
                        <RowDefinition Height="25"/>
                        <!--Header / User Info-->
                        <RowDefinition Height="35"/>
                        <!--Content Section / Child Views-->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--Control Bar-->
                    <StackPanel x:Name="pnlControlBar"
                                Grid.Row="0"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Background="Transparent"
                                Margin="0,0,5,0"
                                MouseLeftButtonDown="pnlControlBar_MouseLeftButtonDown"
                                MouseEnter="pnlControlBar_MouseEnter">

                        <Button x:Name="btnClose"
                                Style="{StaticResource controlBarButton}"
                                Tag="{StaticResource color4}"
                                Click="btnClose_Click"
                                ToolTip="Close">
                            <fa:IconImage Icon="Xmark" Style="{StaticResource contrlBarButtonIcon}"/>
                        </Button>

                        <Button x:Name="btnMaximize"
                                Style="{StaticResource controlBarButton}"
                                Tag="{StaticResource color4}"
                                Click="btnMaximize_Click"
                                ToolTip="Maximize">
                            <fa:IconImage Icon="WindowMaximize" Style="{StaticResource contrlBarButtonIcon}"/>
                        </Button>

                        <Button x:Name="btnMinimize"
                                Style="{StaticResource controlBarButton}"
                                Tag="{StaticResource color4}"
                                Click="btnMinimize_Click"
                                ToolTip="Minimize">
                            <fa:IconImage Icon="WindowMinimize" Style="{StaticResource contrlBarButtonIcon}"/>
                        </Button>
                    </StackPanel>

                    <!--Header / User Info-->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!--Header-->
                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <fa:IconImage Icon="Home"
                                          Width="20"
                                          Height="20"
                                          Foreground="{StaticResource color12}"
                                          VerticalAlignment="Center"
                                          Margin="10,0,0,0"/>
                            <TextBlock Text="Dashboard"
                                       Foreground="{StaticResource color12}"
                                       FontSize="20"
                                       FontFamily="Trebuchet MS"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"></TextBlock>
                        </StackPanel>

                        <!--User Into-->
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    FlowDirection="RightToLeft"
                                    Margin="0,0,10,0">
                            <Button Style="{StaticResource userInfoButton}"
                                    Tag="{StaticResource color1}">
                                <fa:IconImage Icon="AngleDown" Style="{StaticResource userInfoButtonIcon}"/>
                            </Button>
                            <TextBlock Text="User Name"
                                       Foreground="{StaticResource color12}"
                                       FontFamily="Trebuchet MS"
                                       FontSize="16"
                                       VerticalAlignment="Center"/>
                            <Ellipse Height="30" Width="30"
                                     Stroke="{StaticResource color2}"
                                     StrokeThickness="2"
                                     Margin="10,0,10,0">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/Images/user.png"/>
                                </Ellipse.Fill>
                            </Ellipse>

                            <Button Style="{StaticResource userInfoButton}"
                                    Tag="{StaticResource color12}">
                                <fa:IconImage Icon="Clock" Style="{StaticResource userInfoButtonIcon}"/>
                            </Button>
                            <Button Style="{StaticResource userInfoButton}"
                                    Tag="{StaticResource color12}">
                                <fa:IconImage Icon="Bell" Style="{StaticResource userInfoButtonIcon}"/>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!--Content Section / Child Views-->
                    <ContentControl Content=""
                                    Grid.Row="2"
                                    Margin="25"/>
                </Grid>
            </Border>
        </Grid>

    </Border>

</Window>
